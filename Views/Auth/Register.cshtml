
@{
    ViewData["Title"] = "Register Page";
}

<!DOCTYPE html>
<html>
<head>
    <link href="~/css/register.css" rel="stylesheet" />
    <meta charset="utf-8" />
    <title>Registro</title>
</head>
<body>
    <form asp-action="Register" method="post">
        <h2>Registro de Usuario</h2>

        <div>
            <label for="name">Nombre:</label>
            <input type="text" id="name" name="NameUser" required />
        </div>

        <div>
            <label for="email">Correo Electrónico:</label>
            <input type="email" id="email" name="EmailUser" required />
        </div>

        <div>
            <label for="password">Contraseña:</label>
            <input type="password" id="password" name="PasswordUser" required />
        </div>

        <div>
            <button type="submit">Registrar Usuario</button>
        </div>
    </form>

    <p>¿Ya tienes una cuenta? <a asp-controller="Auth" asp-action="Login">Inicia sesión aquí</a>.</p>
</body>
</html>
    

