
@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <h2>Confirmar Eliminación de Usuario</h2>

    <div>
        <dl class="dl-horizontal">
            <dt>Id</dt>
            <dd>@Model.IdUser</dd>
            <dt>Nombre</dt>
            <dd>@Model.NameUser</dd>
            <dt>Email</dt>
            <dd>@Model.EmailUser</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden"/>
            <input type="submit" value="Borrar Usuario" class="btn btn-danger" /> |
        </form>

        <a asp-controller="Persons" asp-action="Index">Volver a la Lista de Usuarios</a>
    </div>
</body>
</html>
