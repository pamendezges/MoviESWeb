
@{
    ViewData["Title"] = "Persons List Page";
}

<!DOCTYPE html>

<link href="~/css/indexTable.css" rel="stylesheet" />


<div class="text-center">

    <table class="border border-2 table table-striper-columns text-center">
        <tr>
            <th>IdUser</th>
            <th>NameUser</th>
            <th>EmailUser</th>
            <th>Acciones</th>
        </tr>

        @foreach (var user in Model.Users)
        {
            <tr>
                <th>@user.IdUser</th>
                <th>@user.NameUser</th>
                <th>@user.EmailUser</th>
                <td>
                    <a asp-action="Delete" asp-route-id="@user.IdUser" class="btn btn-danger">Borrar Usuario</a>
                </td>

            </tr>
        }
    </table>

    <table class="border border-2 table table-striper-columns text-center">
        <tr>
            <th>IdAdmin</th>
            <th>NameAdmin</th>
            <th>EmailAdmin</th>
        </tr>

        @foreach (var admin in Model.Admins)
        {
            <tr>
                <th>@admin.IdAdmin</th>
                <th>@admin.NameAdmin</th>
                <th>@admin.EmailAdmin</th>

            </tr>
        }
    </table>

    <table class="border border-2 table table-striper-columns text-center">
        <tr>
            <th>Id Película</th>
            <th>Titulo</th>
            <th>Categoría</th>
            <th>Director</th>
            <th>Productor</th>
            <th>Actor Principal</th>
        </tr>

        @foreach (var film in Model.Films)
        {
            <tr>
                <th>@film.IdFilm</th>
                <td><a href="@Url.Action("FilmDetails", new { id = film.IdFilm })">@film.Title</a></td>
                <th>@film.Category</th>
                <th>@film.Director</th>
                <th>@film.Producer</th>
                <th>@film.MainActor</th>
                <td>
                    <a asp-controller="Content" asp-action="DeleteFilm" asp-route-id="@film.IdFilm" class="btn btn-danger">Borrar Pelicula</a>
                </td>
            </tr>
        }
    </table>

    <table class="border border-2 table table-striper-columns text-center">
        <tr>
            <th>Id Documental</th>
            <th>Titulo</th>
            <th>Categoría</th>
            <th>TV Productor</th>
            <th>Voiceover</th>
        </tr>

        @foreach (var documentary in Model.Documentaries)
        {
            <tr>
                <th>@documentary.IdDocumentary</th>
                <td><a href="@Url.Action("DocumentaryDetails", new { id = documentary.IdDocumentary })">@documentary.Title</a></td>
                <th>@documentary.Category</th>
                <th>@documentary.TvProducer</th>
                @{
                    if (@documentary.Voiceover == true)
                    {
                        <th>'Con Doblaje'</th>
                    }
                    else
                    {
                        <th>'Sin Doblaje'</th>
                    }
                }
                <td>
                    <a asp-controller="Content" asp-action="DeleteDocumentary" asp-route-id="@documentary.IdDocumentary" class="btn btn-danger">Borrar Documental</a>
                </td>

            </tr>
        }
    </table>

</div>
